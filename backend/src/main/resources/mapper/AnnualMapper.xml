<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.research.project.mapper.AnnualMapper">
    
    <resultMap id="BaseResultMap" type="com.research.project.entity.Annual">
        <id column="id" property="id"/>
        <result column="annual_no" property="annualNo"/>
        <result column="project_id" property="projectId"/>
        <result column="project_no" property="projectNo"/>
        <result column="project_name" property="projectName"/>
        <result column="institution_name" property="institutionName"/>
        <result column="project_leader" property="projectLeader"/>
        <result column="check_year" property="checkYear"/>
        <result column="year_target" property="yearTarget"/>
        <result column="year_completion" property="yearCompletion"/>
        <result column="plan_progress" property="planProgress"/>
        <result column="actual_progress" property="actualProgress"/>
        <result column="year_budget" property="yearBudget"/>
        <result column="used_budget" property="usedBudget"/>
        <result column="budget_desc" property="budgetDesc"/>
        <result column="achievements" property="achievements"/>
        <result column="problems" property="problems"/>
        <result column="next_plan" property="nextPlan"/>
        <result column="attachments" property="attachments"/>
        <result column="status" property="status"/>
        <result column="audit_comment" property="auditComment"/>
        <result column="audit_time" property="auditTime"/>
        <result column="audit_by" property="auditBy"/>
        <result column="submit_time" property="submitTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="deleted" property="deleted"/>
    </resultMap>
    
    <select id="selectByProjectId" resultMap="BaseResultMap">
        SELECT * FROM prj_annual WHERE project_id = #{projectId} AND deleted = 0
        ORDER BY check_year DESC
    </select>
    
    <!-- 分页查询年度检查列表 - 对应Controller: list() -->
    <select id="selectPageList" resultMap="BaseResultMap">
        SELECT * FROM prj_annual
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND (project_no LIKE CONCAT('%', #{keyword}, '%') 
                 OR project_name LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        <if test="checkYear != null and checkYear != ''">
            AND check_year = #{checkYear}
        </if>
        <if test="projectId != null">
            AND project_id = #{projectId}
        </if>
        ORDER BY create_time DESC
    </select>
    
    <!-- 提交年度检查 - 对应Controller: submit() -->
    <update id="submitAnnual">
        UPDATE prj_annual SET
            status = 'submitted',
            submit_time = NOW(),
            update_time = NOW()
        WHERE id = #{id} AND deleted = 0
    </update>
    
    <!-- 审核年度检查 - 对应Controller: audit() -->
    <update id="auditAnnual">
        UPDATE prj_annual SET
            status = #{status},
            audit_comment = #{auditComment},
            audit_time = NOW(),
            audit_by = #{auditBy}
        WHERE id = #{id} AND deleted = 0
    </update>
    
    <!-- 退回修改 - 对应Controller: reject() -->
    <update id="rejectAnnual">
        UPDATE prj_annual SET
            status = 'rejected',
            audit_comment = #{auditComment},
            audit_time = NOW(),
            audit_by = #{auditBy}
        WHERE id = #{id} AND deleted = 0
    </update>
    
    <!-- 批量审核 - 对应Controller: batchAudit() -->
    <update id="batchAudit">
        UPDATE prj_annual SET
            status = #{status},
            audit_comment = #{auditComment},
            audit_time = NOW(),
            audit_by = #{auditBy}
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        AND deleted = 0
    </update>
    
    <!-- 统计年度检查状态 -->
    <select id="selectCountByStatus" resultType="map">
        SELECT status, COUNT(*) as count
        FROM prj_annual WHERE deleted = 0
        GROUP BY status
    </select>
    
    <!-- Added countByStatus method for statistics -->
    <select id="countByStatus" resultType="java.lang.Long">
        SELECT COUNT(*) FROM prj_annual
        WHERE status = #{status} AND deleted = 0
    </select>
    
</mapper>
