<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.research.project.mapper.AssessmentMaterialMapper">

    <resultMap id="BaseResultMap" type="com.research.project.entity.AssessmentMaterial">
        <id column="id" property="id"/>
        <result column="material_no" property="materialNo"/>
        <result column="assessment_id" property="assessmentId"/>
        <result column="material_year" property="materialYear"/>
        <result column="institution_id" property="institutionId"/>
        <result column="institution_name" property="institutionName"/>
        <result column="material_type" property="materialType"/>
        <result column="material_name" property="materialName"/>
        <result column="file_url" property="fileUrl"/>
        <result column="file_name" property="fileName"/>
        <result column="file_size" property="fileSize"/>
        <result column="submit_time" property="submitTime"/>
        <result column="submit_by" property="submitBy"/>
        <result column="audit_status" property="auditStatus"/>
        <result column="audit_opinion" property="auditOpinion"/>
        <result column="audit_time" property="auditTime"/>
        <result column="audit_by" property="auditBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <select id="selectByAssessmentId" resultMap="BaseResultMap">
        SELECT * FROM prj_assessment_material 
        WHERE assessment_id = #{assessmentId} AND deleted = 0
        ORDER BY create_time DESC
    </select>

    <select id="selectByYear" resultMap="BaseResultMap">
        SELECT * FROM prj_assessment_material 
        WHERE material_year = #{year} AND deleted = 0
        ORDER BY submit_time DESC
    </select>

</mapper>
