<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.research.project.mapper.TaskBookMapper">
    
    <resultMap id="BaseResultMap" type="com.research.project.entity.TaskBook">
        <id column="id" property="id"/>
        <result column="task_book_no" property="taskBookNo"/>
        <result column="project_id" property="projectId"/>
        <result column="project_no" property="projectNo"/>
        <result column="project_name" property="projectName"/>
        <result column="project_type" property="projectType"/>
        <result column="institution_id" property="institutionId"/>
        <result column="institution_name" property="institutionName"/>
        <result column="project_leader" property="projectLeader"/>
        <result column="leader_phone" property="leaderPhone"/>
        <result column="start_date" property="startDate"/>
        <result column="end_date" property="endDate"/>
        <result column="total_budget" property="totalBudget"/>
        <result column="apply_budget" property="applyBudget"/>
        <result column="self_budget" property="selfBudget"/>
        <result column="objective" property="objective"/>
        <result column="content" property="content"/>
        <result column="expected_result" property="expectedResult"/>
        <result column="indicators" property="indicators"/>
        <result column="task_book_file" property="taskBookFile"/>
        <result column="sealed_file" property="sealedFile"/>
        <result column="need_midterm" property="needMidterm"/>
        <result column="midterm_date" property="midtermDate"/>
        <result column="need_annual" property="needAnnual"/>
        <result column="annual_date" property="annualDate"/>
        <result column="status" property="status"/>
        <result column="audit_status" property="auditStatus"/>
        <result column="audit_comment" property="auditComment"/>
        <result column="audit_time" property="auditTime"/>
        <result column="audit_by" property="auditBy"/>
        <result column="sign_time" property="signTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="deleted" property="deleted"/>
    </resultMap>
    
    <select id="selectByProjectId" resultMap="BaseResultMap">
        SELECT * FROM prj_task_book WHERE project_id = #{projectId} AND deleted = 0
    </select>
    
    <!-- 分页查询任务书列表 - 对应Controller: list() -->
    <select id="selectPageList" resultMap="BaseResultMap">
        SELECT * FROM prj_task_book
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND (project_no LIKE CONCAT('%', #{keyword}, '%') 
                 OR project_name LIKE CONCAT('%', #{keyword}, '%')
                 OR institution_name LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        <if test="projectId != null">
            AND project_id = #{projectId}
        </if>
        ORDER BY create_time DESC
    </select>
    
    <!-- 审核任务书 - 对应Controller: audit() -->
    <update id="auditTaskBook">
        UPDATE prj_task_book SET
            audit_status = #{auditStatus},
            status = #{status},
            audit_comment = #{auditComment},
            audit_time = NOW(),
            audit_by = #{auditBy}
        WHERE id = #{id} AND deleted = 0
    </update>
    
    <!-- 签订任务书 - 对应Controller: sign() -->
    <update id="signTaskBook">
        UPDATE prj_task_book SET
            status = 'signed',
            sign_time = NOW(),
            update_time = NOW()
        WHERE id = #{id} AND deleted = 0
    </update>
    
    <!-- 更新封面文件 - 对应Controller: updateSealedFile() -->
    <update id="updateSealedFile">
        UPDATE prj_task_book SET
            sealed_file = #{sealedFile},
            update_time = NOW()
        WHERE id = #{id} AND deleted = 0
    </update>
    
    <!-- 配置中期检查 - 对应Controller: configureMidterm() -->
    <update id="configureMidterm">
        UPDATE prj_task_book SET
            need_midterm = #{needMidterm},
            midterm_date = #{midtermDate},
            update_time = NOW()
        WHERE id = #{id} AND deleted = 0
    </update>
    
    <!-- 配置年度检查 - 对应Controller: configureAnnual() -->
    <update id="configureAnnual">
        UPDATE prj_task_book SET
            need_annual = #{needAnnual},
            annual_date = #{annualDate},
            update_time = NOW()
        WHERE id = #{id} AND deleted = 0
    </update>
    
    <!-- 批量审核 - 对应Controller: batchAudit() -->
    <update id="batchAudit">
        UPDATE prj_task_book SET
            audit_status = #{auditStatus},
            status = #{status},
            audit_comment = #{auditComment},
            audit_time = NOW(),
            audit_by = #{auditBy}
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        AND deleted = 0
    </update>
    
    <!-- 统计任务书状态 -->
    <select id="selectCountByStatus" resultType="map">
        SELECT status, COUNT(*) as count
        FROM prj_task_book WHERE deleted = 0
        GROUP BY status
    </select>
    
</mapper>
