<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.research.project.mapper.ChangeMapper">
    
    <resultMap id="BaseResultMap" type="com.research.project.entity.Change">
        <id column="id" property="id"/>
        <result column="change_no" property="changeNo"/>
        <result column="project_id" property="projectId"/>
        <result column="project_no" property="projectNo"/>
        <result column="project_name" property="projectName"/>
        <result column="apply_unit" property="applyUnit"/>
        <result column="applicant" property="applicant"/>
        <result column="apply_time" property="applyTime"/>
        <result column="change_type" property="changeType"/>
        <result column="change_item" property="changeItem"/>
        <result column="change_reason" property="changeReason"/>
        <result column="before_content" property="beforeContent"/>
        <result column="after_content" property="afterContent"/>
        <result column="attachments" property="attachments"/>
        <result column="status" property="status"/>
        <result column="audit_comment" property="auditComment"/>
        <result column="audit_time" property="auditTime"/>
        <result column="audit_by" property="auditBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="deleted" property="deleted"/>
    </resultMap>
    
    <select id="selectByProjectId" resultMap="BaseResultMap">
        SELECT * FROM prj_change WHERE project_id = #{projectId} AND deleted = 0
        ORDER BY create_time DESC
    </select>
    
    <!-- 分页查询变更列表 - 对应Controller: list() -->
    <select id="selectPageList" resultMap="BaseResultMap">
        SELECT * FROM prj_change
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND (project_no LIKE CONCAT('%', #{keyword}, '%') 
                 OR project_name LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        <if test="changeType != null and changeType != ''">
            AND change_type = #{changeType}
        </if>
        <if test="projectId != null">
            AND project_id = #{projectId}
        </if>
        ORDER BY create_time DESC
    </select>
    
    <!-- 审核变更 - 对应Controller: audit() -->
    <update id="auditChange">
        UPDATE prj_change SET
            status = #{status},
            audit_comment = #{auditComment},
            audit_time = NOW(),
            audit_by = #{auditBy}
        WHERE id = #{id} AND deleted = 0
    </update>
    
    <!-- 撤回变更 - 对应Controller: withdraw() -->
    <update id="withdrawChange">
        UPDATE prj_change SET
            status = 'withdrawn',
            update_time = NOW()
        WHERE id = #{id} AND deleted = 0
    </update>
    
    <!-- 批量审核 - 对应Controller: batchAudit() -->
    <update id="batchAudit">
        UPDATE prj_change SET
            status = #{status},
            audit_comment = #{auditComment},
            audit_time = NOW(),
            audit_by = #{auditBy}
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        AND deleted = 0
    </update>
    
    <!-- 查询变更历史 - 对应Controller: history() -->
    <select id="selectHistoryByProjectId" resultMap="BaseResultMap">
        SELECT * FROM prj_change 
        WHERE project_id = #{projectId} AND deleted = 0
        ORDER BY create_time DESC
    </select>
    
    <!-- 统计变更状态 -->
    <select id="selectCountByStatus" resultType="map">
        SELECT status, COUNT(*) as count
        FROM prj_change WHERE deleted = 0
        GROUP BY status
    </select>
    
    <!-- Added countByConditions method for statistics -->
    <select id="countByConditions" resultType="long">
        SELECT COUNT(*) FROM prj_change
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND (project_no LIKE CONCAT('%', #{keyword}, '%') 
                 OR project_name LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        <if test="changeType != null and changeType != ''">
            AND change_type = #{changeType}
        </if>
    </select>
    
    <!-- Added selectByConditions method for list() pagination -->
    <select id="selectByConditions" resultMap="BaseResultMap">
        SELECT * FROM prj_change
        WHERE deleted = 0
        <if test="keyword != null and keyword != ''">
            AND (project_no LIKE CONCAT('%', #{keyword}, '%') 
                 OR project_name LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        <if test="changeType != null and changeType != ''">
            AND change_type = #{changeType}
        </if>
        ORDER BY create_time DESC
        LIMIT #{offset}, #{size}
    </select>
    
</mapper>
