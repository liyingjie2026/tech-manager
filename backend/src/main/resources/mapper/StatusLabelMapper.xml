<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.research.project.mapper.StatusLabelMapper">

    <resultMap id="BaseResultMap" type="com.research.project.entity.StatusLabel">
        <id column="id" property="id"/>
        <result column="category" property="category"/>
        <result column="value" property="value"/>
        <result column="label" property="label"/>
        <result column="color" property="color"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="is_active" property="isActive"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectByCategory" resultMap="BaseResultMap">
        SELECT * FROM sys_status_label
        WHERE category = #{category}
        AND is_active = 1
        ORDER BY sort_order ASC
    </select>

    <select id="selectByCategoryAndValue" resultMap="BaseResultMap">
        SELECT * FROM sys_status_label
        WHERE category = #{category}
        AND value = #{value}
        AND is_active = 1
        LIMIT 1
    </select>

    <select id="selectAllCategories" resultType="java.lang.String">
        SELECT DISTINCT category FROM sys_status_label
        WHERE is_active = 1
        ORDER BY category
    </select>

</mapper>
