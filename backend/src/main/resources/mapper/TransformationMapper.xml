<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.research.project.mapper.TransformationMapper">
    
    <resultMap id="BaseResultMap" type="com.research.project.entity.Transformation">
        <id column="id" property="id"/>
        <result column="achievement_id" property="achievementId"/>
        <result column="transformation_no" property="transformationNo"/>
        <result column="content" property="content"/>
        <result column="type" property="type"/>
        <result column="unit" property="unit"/>
        <result column="principal" property="principal"/>
        <result column="contact" property="contact"/>
        <result column="status" property="status"/>
        <result column="comment" property="comment"/>
        <result column="value" property="value"/>
        <result column="attachments" property="attachments"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="deleted" property="deleted"/>
    </resultMap>
    
    <!-- 根据成果ID查询转化记录 -->
    <select id="selectByAchievementId" resultMap="BaseResultMap">
        SELECT * FROM prj_transformation 
        WHERE achievement_id = #{achievementId} AND deleted = 0
        ORDER BY create_time DESC
    </select>
    
    <!-- 分页查询成果转化列表 -->
    <select id="selectPage" resultMap="BaseResultMap">
        SELECT * FROM prj_transformation
        WHERE deleted = 0
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        <if test="type != null and type != ''">
            AND type = #{type}
        </if>
        <if test="keyword != null and keyword != ''">
            AND (content LIKE CONCAT('%', #{keyword}, '%') 
                 OR unit LIKE CONCAT('%', #{keyword}, '%')
                 OR principal LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        ORDER BY create_time DESC
    </select>
    
    <!-- 统计转化数量 -->
    <select id="countByStatus" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM prj_transformation
        WHERE deleted = 0 AND status = #{status}
    </select>
    
</mapper>
