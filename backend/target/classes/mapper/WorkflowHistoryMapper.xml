<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.research.project.mapper.WorkflowHistoryMapper">

    <resultMap id="BaseResultMap" type="com.research.project.entity.WorkflowHistory">
        <id column="id" property="id"/>
        <result column="workflow_id" property="workflowId"/>
        <result column="business_id" property="businessId"/>
        <result column="business_type" property="businessType"/>
        <result column="step_name" property="stepName"/>
        <result column="action" property="action"/>
        <result column="operator" property="operator"/>
        <result column="operator_name" property="operatorName"/>
        <result column="comment" property="comment"/>
        <result column="operate_time" property="operateTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <select id="selectByBusinessId" resultMap="BaseResultMap">
        SELECT * FROM prj_workflow_history 
        WHERE business_id = #{businessId} 
        AND business_type = #{businessType}
        AND deleted = 0
        ORDER BY operate_time ASC
    </select>

    <select id="selectByWorkflowId" resultMap="BaseResultMap">
        SELECT * FROM prj_workflow_history 
        WHERE workflow_id = #{workflowId} AND deleted = 0
        ORDER BY operate_time DESC
    </select>

</mapper>
