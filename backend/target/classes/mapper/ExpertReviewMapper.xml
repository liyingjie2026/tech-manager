<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.research.project.mapper.ExpertReviewMapper">
    
    <resultMap id="BaseResultMap" type="com.research.project.entity.ExpertReview">
        <id column="id" property="id"/>
        <result column="batch_no" property="batchNo"/>
        <result column="review_name" property="reviewName"/>
        <result column="project_id" property="projectId"/>
        <result column="project_name" property="projectName"/>
        <result column="expert_id" property="expertId"/>
        <result column="expert_name" property="expertName"/>
        <result column="review_type" property="reviewType"/>
        <result column="review_method" property="reviewMethod"/>
        <result column="review_start_time" property="reviewStartTime"/>
        <result column="review_end_time" property="reviewEndTime"/>
        <result column="score" property="score"/>
        <result column="grade" property="grade"/>
        <result column="comment" property="comment"/>
        <result column="recommended" property="recommended"/>
        <result column="status" property="status"/>
        <result column="review_time" property="reviewTime"/>
        <result column="avoided" property="avoided"/>
        <result column="avoid_reason" property="avoidReason"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="deleted" property="deleted"/>
    </resultMap>
    
    <select id="selectByProjectId" resultMap="BaseResultMap">
        SELECT * FROM prj_expert_review WHERE project_id = #{projectId} AND deleted = 0
    </select>
    
    <select id="selectByExpertId" resultMap="BaseResultMap">
        SELECT * FROM prj_expert_review WHERE expert_id = #{expertId} AND deleted = 0
        ORDER BY create_time DESC
    </select>
    
    <select id="selectByBatchNo" resultMap="BaseResultMap">
        SELECT * FROM prj_expert_review WHERE batch_no = #{batchNo} AND deleted = 0
    </select>
    
</mapper>
