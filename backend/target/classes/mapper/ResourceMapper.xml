<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.research.project.mapper.ResourceMapper">
    
    <resultMap id="BaseResultMap" type="com.research.project.entity.Resource">
        <id column="id" property="id"/>
        <result column="resource_no" property="resourceNo"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="field" property="field"/>
        <result column="discipline" property="discipline"/>
        <result column="instrument_type" property="instrumentType"/>
        <result column="software_type" property="softwareType"/>
        <result column="specification" property="specification"/>
        <result column="manufacturer" property="manufacturer"/>
        <result column="purchase_date" property="purchaseDate"/>
        <result column="original_value" property="originalValue"/>
        <result column="institution_id" property="institutionId"/>
        <result column="institution_name" property="institutionName"/>
        <result column="location" property="location"/>
        <result column="manager" property="manager"/>
        <result column="contact_phone" property="contactPhone"/>
        <result column="description" property="description"/>
        <result column="instructions" property="instructions"/>
        <result column="images" property="images"/>
        <result column="attachments" property="attachments"/>
        <result column="is_shared" property="isShared"/>
        <result column="share_method" property="shareMethod"/>
        <result column="charge_standard" property="chargeStandard"/>
        <result column="borrow_count" property="borrowCount"/>
        <result column="current_status" property="currentStatus"/>
        <result column="status" property="status"/>
        <result column="audit_status" property="auditStatus"/>
        <result column="audit_comment" property="auditComment"/>
        <result column="audit_time" property="auditTime"/>
        <result column="audit_by" property="auditBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="deleted" property="deleted"/>
    </resultMap>
    
    <select id="selectByInstitutionId" resultMap="BaseResultMap">
        SELECT * FROM res_resource WHERE institution_id = #{institutionId} AND deleted = 0
    </select>
    
    <select id="selectByType" resultMap="BaseResultMap">
        SELECT * FROM res_resource WHERE type = #{type} AND deleted = 0
    </select>
    
</mapper>
