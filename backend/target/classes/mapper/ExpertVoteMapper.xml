<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.research.project.mapper.ExpertVoteMapper">

    <resultMap id="BaseResultMap" type="com.research.project.entity.ExpertVote">
        <id column="id" property="id"/>
        <result column="project_id" property="projectId"/>
        <result column="expert_id" property="expertId"/>
        <result column="expert_name" property="expertName"/>
        <result column="vote_type" property="voteType"/>
        <result column="vote_result" property="voteResult"/>
        <result column="vote_reason" property="voteReason"/>
        <result column="vote_time" property="voteTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <select id="selectByProjectId" resultMap="BaseResultMap">
        SELECT * FROM prj_expert_vote 
        WHERE project_id = #{projectId} AND deleted = 0
        ORDER BY vote_time DESC
    </select>

    <select id="selectByExpertId" resultMap="BaseResultMap">
        SELECT * FROM prj_expert_vote 
        WHERE expert_id = #{expertId} AND deleted = 0
        ORDER BY vote_time DESC
    </select>

    <select id="countVoteResults" resultType="map">
        SELECT 
            vote_result,
            COUNT(*) as count
        FROM prj_expert_vote 
        WHERE project_id = #{projectId} AND deleted = 0
        GROUP BY vote_result
    </select>

</mapper>
